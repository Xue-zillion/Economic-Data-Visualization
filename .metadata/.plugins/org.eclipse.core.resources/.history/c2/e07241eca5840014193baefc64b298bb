package com.zillioninfo.economic;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.ResultSet;
import java.sql.Statement;
import java.util.ArrayList;
import java.util.List;

import javax.ws.rs.GET;
import javax.ws.rs.Path;
import javax.ws.rs.Produces;
import javax.ws.rs.QueryParam;

import net.sf.json.JSONArray;

/**
 * Example resource class hosted at the URI path "/myresource"
 */

@Path("/myresource")
public class MyResource {

	String usr = "postgres";
	String pwd = "102401";
	String url = "jdbc:postgresql:postgres";
	/**
	 * Method processing HTTP GET requests, producing "text/plain" MIME media
	 * type.
	 * 
	 * @return String that will be send back as a response of type "text/plain".
	 */
	@GET
	@Produces("text/plain")
	public String getIt() {
		return "Hi there!";
	}

	@GET
	@Path("/testdata")
	@Produces("text/json")
	public String testdata() {
		List<String[]> datalist = new ArrayList();
		// connect my postgresql
		// yy change to your database setting
		/*String usr = "postgres";
		String pwd = "yu20141008";
		String url = "jdbc:postgresql://localhost:5432/postgres";*/

		try {
			// Loading the Driver
			Class.forName("org.postgresql.Driver");
			// Connecting to the Database:
			Connection con = DriverManager.getConnection(url, usr, pwd);
			Statement st = con.createStatement();
			String sql = "select * from \"T_AIR_MONTH_AVG_DATA\" order by \"RECORDTIME\" ASC";
			ResultSet rs = st.executeQuery(sql);
			while (rs.next()) {
				System.out.print(rs.getString(2));
				System.out.println(rs.getString(5));
				String[] strings = {
						rs.getString(2).split(" ")[0].split("-")[0],
						rs.getString(2).split(" ")[0].split("-")[1],
						rs.getString(2).split(" ")[0].split("-")[2],
						rs.getString(3), rs.getString(4), rs.getString(5),
						rs.getString(6), rs.getString(7), rs.getString(8) };
				datalist.add(strings);
			}
			rs.close();
			st.close();
			con.close();

		} catch (Exception ee) {
			System.out.print(ee.getMessage());
		}

		JSONArray jsonArray = JSONArray.fromObject(datalist);// change list to
																// jsonarray,
		System.out.println(jsonArray.toString());
		return jsonArray.toString();

	}
	@GET
	@Path("/test")
	@Produces("text/plain")
	public String test() {
		return "{\"key\":\"Hi there!\"}";
	}
}